[bar/top]
width = 100%
height = 22
offset-x = 0
offset-y = 0 
;bottom = true
monitor = LVDS1
monitor-strict = false

background = #262626
foreground = #eee

underline-size = 0
underline-color = #eee

spacing = 1
padding-left = 0
padding-right = 0
padding-top = 8

module-margin-left = 0 
module-margin-right = 0

font-0 = Roboto Mono for Powerline:pixelsize=9;0
font-1 = FontAwesome:size=7;0
font-2 = siji:pixelsize=7;0

modules-left = bspwm cmus-control-prev cmus-control-next  cmus
modules-center =
modules-right = music battery backlight temperature wired-network wireless-network  volume date

tray-position = right
tray-padding = 2
tray-transparent = false

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

; MODULES

[module/bspwm]
type = internal/bspwm

ws-icon-0 = web;
ws-icon-1 = term;
ws-icon-2 = chat;
ws-icon-3 = code;
ws-icon-4 = music;
ws-icon-default = 

format = <label-state><label-mode>

label-focused = %icon%
label-focused-background = #4FC3F7
label-focused-foreground = #262626
label-focused-padding = 1

label-occupied = %icon%
label-occupied-foreground = #00E676
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-foreground = #D81B60
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = #44ffffff
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-maxlen = 30
label-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = %a %b %d, 
time = %I:%M:%S %p
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

label = %date% %time%
format = <label>
format-padding = 1
label-foreground = #1DE9B6

[module/padding]
type = custom/text
content = 	 
